package randoop.util;

import java.lang.reflect.Field;
import java.util.Collections;
import java.util.Map;
import java.util.Set;
import randoop.Globals;
import randoop.main.RandoopBug;

@org.checkerframework.framework.qual.AnnotatedFor("org.checkerframework.checker.signature.SignatureChecker")
public class TestCoverageInfo {

    public final  @org.checkerframework.checker.signature.qual.SignatureUnknown int @org.checkerframework.checker.signature.qual.SignatureUnknown [] branchTrue;

    public final  @org.checkerframework.checker.signature.qual.SignatureUnknown int @org.checkerframework.checker.signature.qual.SignatureUnknown [] branchFalse;

    public final @org.checkerframework.checker.signature.qual.SignatureUnknown Map<String, Set<Integer>> methodToIndices;

    // A pair of: branches covered, total branches in method
    private static class BranchCov {

        final  @org.checkerframework.checker.signature.qual.SignatureUnknown int covered;

        final  @org.checkerframework.checker.signature.qual.SignatureUnknown int inMethod;

        BranchCov( @org.checkerframework.checker.signature.qual.SignatureUnknown int covered,  @org.checkerframework.checker.signature.qual.SignatureUnknown int inMethod) {
            this.covered = covered;
            this.inMethod = inMethod;
        }
    }

    public TestCoverageInfo(int totalBranches, Map<String, Set<Integer>> map) {
        if (totalBranches < 0)
            throw new IllegalArgumentException();
        branchTrue = new int[totalBranches];
        branchFalse = new int[totalBranches];
        methodToIndices = Collections.unmodifiableMap(map);
    }

    private @org.checkerframework.checker.signature.qual.SignatureUnknown String getCoverageInfo(@org.checkerframework.checker.signature.qual.SignatureUnknown TestCoverageInfo this) {
        StringBuilder b = new StringBuilder();
        int totalBranchesCovered = 0;
        int totalBranches = 0;
        for (Map.Entry<String, Set<Integer>> entry : methodToIndices.entrySet()) {
            String methodSignature = entry.getKey();
            BranchCov covAndTot = getCoverageInfo(methodSignature);
            int branchesCovered = covAndTot.covered;
            int branchesInMethod = covAndTot.inMethod;
            totalBranchesCovered += branchesCovered;
            totalBranches += branchesInMethod;
            double percentCovered = ((double) branchesCovered) / ((double) branchesInMethod);
            b.append((methodSignature == null ? "other" : methodSignature) + ": " + branchesCovered + "/" + branchesInMethod + " (" + percentCovered + "%)" + Globals.lineSep);
        }
        double totalPercent = ((double) totalBranchesCovered) / ((double) totalBranches);
        b.append("TOTAL :" + totalBranchesCovered + "/" + totalBranches + " (" + totalPercent + "%)" + Globals.lineSep);
        return b.toString();
    }

    private @org.checkerframework.checker.signature.qual.SignatureUnknown BranchCov getCoverageInfo(@org.checkerframework.checker.signature.qual.SignatureUnknown TestCoverageInfo this, @org.checkerframework.checker.signature.qual.SignatureUnknown String methodSignature) {
        Set<Integer> indices = methodToIndices.get(methodSignature);
        int totalBranches = indices.size() * 2;
        int branchesCovered = 0;
        for (Integer i : indices) {
            if (branchTrue[i] > 0) {
                branchesCovered++;
            }
            if (branchFalse[i] > 0) {
                branchesCovered++;
            }
        }
        assert branchesCovered <= totalBranches;
        return new BranchCov(branchesCovered, totalBranches);
    }

    public static @org.checkerframework.checker.signature.qual.SignatureUnknown String getCoverageInfo(Class<?> clazz) {
        if (!isInstrumented(clazz)) {
            return "Class<?> not instrumented for branch coverage: " + clazz.getName();
        }
        try {
            return getCoverageInfoObject(clazz).getCoverageInfo();
        } catch (Exception e) {
            throw new RandoopBug(e);
        }
    }

    private static @org.checkerframework.checker.signature.qual.SignatureUnknown TestCoverageInfo getCoverageInfoObject(@org.checkerframework.checker.signature.qual.SignatureUnknown Class<?> clazz) throws IllegalArgumentException, SecurityException, IllegalAccessException, NoSuchFieldException {
        Field f = clazz.getDeclaredField("randoopCoverageInfo");
        f.setAccessible(true);
        return (TestCoverageInfo) f.get(null);
    }

    private static  @org.checkerframework.checker.signature.qual.SignatureUnknown boolean isInstrumented(@org.checkerframework.checker.signature.qual.SignatureUnknown Class<?> clazz) {
        for (Field f : clazz.getDeclaredFields()) {
            if (f.getName().equals("randoopCoverageInfo")) {
                return true;
            }
        }
        return false;
    }
}
